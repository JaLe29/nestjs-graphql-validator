{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {
		"no-unused-expression": true
	},
	"rules": {
		"no-console": false,
		"curly": false,
		"quotemark": [
			true,
			"single"
		],
		"semicolon": [
			true,
			"never"
		],
		"member-access": [
			false
		],
		"indent": [
			true,
			"tabs"
		],
		"ordered-imports": [
			false
		],
		"max-line-length": [
			true,
			160
		],
		"member-ordering": [
			false
		],
		"interface-name": [
			false
		],
		"arrow-parens": false,
		"object-literal-sort-keys": false
	},
	"rulesDirectory": [],
	"linterOptions": {
		"exclude": [
			"src/generated/**/*"
		]
	}
}